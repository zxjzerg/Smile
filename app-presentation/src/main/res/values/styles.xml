<resources>

    <!-- Base application theme. -->
    <style name="Smile" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@color/statusBar</item>
    </style>

    <style name="Smile.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="titleTextColor">@android:color/white</item>
        <item name="android:background">?attr/colorPrimary</item>
        <!-- Change controls color in the action bar, will not affect controls in menu-->
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="Smile.PopupTheme" parent="@style/ThemeOverlay.AppCompat.Light">

    </style>

    <style name="Smile.RobotoMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@string/font_family_medium</item>
    </style>

    <style name="Smile.RobotoLight">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@string/font_family_light</item>
    </style>

    <style name="Smile.RobotoRegular">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@string/font_family_regular</item>
    </style>

    <style name="Smile.ColoredButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@string/font_family_medium</item>
        <item name="android:minHeight">60dp</item>
    </style>

</resources>
